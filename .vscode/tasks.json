{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Dev Server",
			"type": "shell",
			"command": "pnpm",
			"args": [
				"dev"
			],
			"isBackground": true,
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": "test"
		},
		{
			"label": "Run Jest Tests",
			"type": "shell",
			"command": "pnpm",
			"args": [
				"test"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": "$jest-hint"
		}
	]
}